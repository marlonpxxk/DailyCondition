<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragement1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.seunghyeonpark.dailycondition.Fragment1">

    <TextView
        android:text="OOO님, "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView5"
        android:textSize="30sp" />

    <TextView
        android:text="안녕하세요?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView5"
        android:id="@+id/textView6"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/textView5" />

    <TextView
        android:text="오늘의 컨디션은 "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:id="@+id/textView7"
        android:textSize="30sp" />

    <TextView
        android:text="OO% 입니다."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="30sp"
        android:layout_below="@+id/textView7"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:text="오늘의 설문을 작성하세요!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:id="@+id/textView9"
        android:textSize="30sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Condition Check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:onClick="onButton1Clicked (Fragment1)" />
</RelativeLayout>
